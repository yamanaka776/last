---
import Layout from "../layouts/Layout.astro";
import { Icon } from 'astro-icon/components'
const {frontmatter} = Astro.props;
const date = new Date(frontmatter.pubDate);
---
<Layout title={frontmatter.title} meta={frontmatter.meta}>
	<article>
	<h1 class="title text-4xl ml-3 font-bold text-main-text dark:text-dark-text">{frontmatter.title}</h1>
    <div class="flex">
	    <p class="publishedAt m-4 text-sub-text dark:text-dark-texti text-xl">{new Intl.DateTimeFormat('ja-JP').format(date)}</p>
    <div class="ml-auto flex">
	    <a href=`https://b.hatena.ne.jp/entry/s/${Astro.url}` class="ml-4">
		    <Icon name="cib:hatena-bookmark" class="text-2xl lg:text-4xl text-blue-400 dark:text-slate-200" />
	    </a>
	    <a href=`https://twitter.com/intent/tweet?url=${Astro.url}` class="mx-4">
		    <Icon name="prime:twitter" class="text-2xl lg:text-4xli text-blue-400 dark:text-slate-200" />
	    </a>
	    <a href="https://ear-diary.com/rss.xml">
		    <Icon name="tabler:rss" class="lg:text-4xl text-2xl text-blue-400 dark:text-slate-200" />
	    </a>

    </div>
    </div>
    <a href=`/tags/${frontmatter.info}` class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-red-900 dark:text-red-300">{frontmatter.info}</a> 
    <div class="prose lg:prose-xl text-main-text dark:prose-invert dark:!text-dark-text w-full mx-2">
	    <slot />
    </div>
	</article>
    <div id="disqus_thread"></div>
