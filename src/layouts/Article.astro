---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
const { info, meta, og, title, date } = Astro.props;
---

<Layout og={og} title={title} meta={meta}>
    <article>
        <h1 class="ml-3 text-center text-4xl font-bold text-main-text dark:text-dark-text">
            {title}
        </h1>
        <div class="flex">
            <p class="publishedAt dark:text-dark-texti m-4 text-xl text-sub-text">
                {new Intl.DateTimeFormat('ja-JP').format(date)}
            </p>
            <div class="ml-auto flex">
                <a href={`https://b.hatena.ne.jp/entry/s/${Astro.url}`} class="ml-4">
                    <Icon
                        name="cib:hatena-bookmark"
                        class="text-2xl text-blue-400 dark:text-slate-200 lg:text-4xl"
                    />
                </a>
                <a href={`https://twitter.com/intent/tweet?url=${Astro.url}`} class="mx-4">
                    <Icon
                        name="prime:twitter"
                        class="text-2xl text-blue-400 dark:text-slate-200 lg:text-4xl"
                    />
                </a>
                <a href="https://ear-diary.com/rss.xml">
                    <Icon
                        name="tabler:rss"
                        class="text-2xl text-blue-400 dark:text-slate-200 lg:text-4xl"
                    />
                </a>
            </div>
        </div>
        <a
            href=`/tags/${info}`
            class="m-2 me-2 rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800 dark:bg-red-900 dark:text-red-300"
            >{info}</a
        >
        <div
            class="prose mx-2 mt-2 w-full text-main-text dark:prose-invert lg:prose-xl dark:!text-dark-text"
        >
            <slot />
        </div>
        <div class="mx-auto flex h-fit w-fit rounded-lg border-2 border-slate-400 p-3">
            <a href=`https://b.hatena.ne.jp/entry/s/${Astro.url}` class="ml-4">
                <Icon
                    name="cib:hatena-bookmark"
                    class="text-2xl text-blue-400 dark:text-slate-200 lg:text-4xl"
                />
            </a>
            <a href=`https://twitter.com/intent/tweet?url=${Astro.url}` class="mx-4">
                <Icon
                    name="prime:twitter"
                    class="text-2xl text-blue-400 dark:text-slate-200 lg:text-4xl"
                />
            </a>
            <a href="https://ear-diary.com/rss.xml">
                <Icon
                    name="tabler:rss"
                    class="text-2xl text-blue-400 dark:text-slate-200 lg:text-4xl"
                />
            </a>
            <a href="#" onclick=`writeText({paurl});`>
                <Icon
                    name="ph:copy"
                    class="text2xl test-blue-400 dark:text-slate-200 lg:text-4xl"
                />
            </a>
        </div>
    </article>
    <div id="disqus_thread"></div>
    <script type="text/partytown" is:inline>
        /**
