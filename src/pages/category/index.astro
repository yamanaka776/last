---
import { getCollection, getEntry } from "astro:content";    
import Layout from "../../layouts/Layout.astro";    
const allPosts = await getCollection("blog");    
const uniqueTags = [...new Set(allPosts.flatMap((post) => post.data.info))];
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";
---
<Layout og="https://ear-diary.com/ear.png" meta="all categories" Title="カテゴリー一覧">
    <div class="dark:text-dark-text text-main-text ml-2">
        <Breadcrumbs>
  <svg
    slot="separator"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    ><polyline points="9 18 15 12 9 6"></polyline>
  </svg>
        </Breadcrumbs>
    </div>
    <ul>
        {uniqueTags.map((post:any) => (
<li class="dark:text-dark-text text main-text font-lg">
    {post}
</li>
        ))}
    </ul>
</Layout>
